@using System.Security.Claims
@using Microsoft.AspNetCore.Identity


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarManagmentSystem</title>
    <!-- Bootstrap CSS -->
     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<!-- Bootstrap Bundle with Popper -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarManagmentSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/will.css">
</head>
<body>
     <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-transparent   box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: Dream Avenue;">CarMa
                    <img src="~/images/wheel2.png" width="40px" height="40px" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Car" asp-action="Index">Car</a>
                        </li>
                    </ul>
                    

                    <!-- User icon and Logout -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav ms-auto d-flex align-items-center"> <!-- Aligns to the right -->
                            <li class="nav-item d-flex align-items-center">
                                @if(User.IsInRole("Client")){
                                    
                                <a href="@Url.Action("ClientProfile","User",new { username =User.Identity.Name})"><div class="user-icon rounded-circle d-flex justify-content-center align-items-center">
                                    @User.Identity.Name?.Substring(0, 1)
                                </div></a>
                                }
                                @if(User.IsInRole("Employee")){
                                <div class="user-icon rounded-circle d-flex justify-content-center align-items-center">
                                    @User.Identity.Name?.Substring(0, 1)
                                </div>
                                }
                                
                            </li>
                            @if(User.IsInRole("Manager")){
                             <li class="nav-item d-flex align-items-center">
                                <a href="@Url.Action("ManagerDashboard","User")"><div class="user-icon rounded-circle d-flex justify-content-center align-items-center">
                                   D
                                </div></a>
                                
                                
                            </li>
                            }
                            <li class="nav-item ms-3">
                                <form asp-area="" asp-controller="User" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="btn btn-link nav-link text-white" style="border: none; background: none;">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    
   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   
   
</body>
</html>
