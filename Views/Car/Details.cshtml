@model CarManagmentSystem.Models.Car

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Model - Mercedes Configurator</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    
    <style>
        body {
            margin: 0;
            font-family: 'Dream Avenue', sans-serif;
            background-color: #f5f5f5;
            overflow-x: hidden;
        }
        .container {
            width: 100%;
            padding: 20px;
            box-sizing: border-box;
        }
        .configurator {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            position: relative;
            min-height: 600px;
        }
        .header {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .header img {
            height: 40px;
        }
        .header nav {
            display: flex;
            gap: 20px;
        }
        .header nav a {
            text-decoration: none;
            color: #333;
            font-weight: 500;
        }
        .header .configure-btn {
            background: #333;
            color: #fff;
            padding: 10px 20px;
            border-radius: 20px;
            text-decoration: none;
        }
        .header .configure-btn:hover {
            background: #555;
        }
        .content {
            display: flex;
            gap: 20px;
            margin-bottom: 60px;
            overflow: auto;
        }
        .sidebar {
            width: 100px;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }
        .sidebar button {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: background 0.3s;
        }
        .sidebar button:hover {
            background: #f0f0f0;
        }
        .main {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-bottom: 60px; /* To ensure space for footer */
        }
        .main h1 {
            font-size: 36px;
            margin: 0;
        }
        .main h2 {
            font-size: 18px;
            color: #777;
            margin: 0;
        }
        .options {
            display: flex;
            gap: 20px;
            margin: 20px 0;
            flex-wrap: wrap;
        }
        .option {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 20px;
            width: 200px;
            text-align: center;
        }
        .option img {
            width: 100%;
            border-radius: 10px;
        }
        .option select {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .option .price {
            font-size: 18px;
            font-weight: 500;
        }
        .car-section {
            display: flex;
            gap: 20px;
            flex-direction: column;
            width: 30%;
            background-color: rgb(0, 0, 0);
            justify-content: center;
            align-items: center;
            margin: 1rem;
            border-radius: 15px;
        }
        .car img {
            width: 400px;
            max-width: 600px;
            height: auto;
            border-radius: 20px;
        }
        .car .rotate-btn {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: background 0.3s;
        }
        .car .rotate-btn:hover {
            background: #f0f0f0;
        }
        .footer {
            position: absolute;
            bottom: 20px;
            left: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: calc(100% - 40px);
        }
        .footer .price {
            font-size: 24px;
            font-weight: 700;
        }
        .footer .apply-btn {
            background: #333;
            color: #fff;
            padding: 10px 20px;
            border-radius: 20px;
            text-decoration: none;
        }
        .footer .apply-btn:hover {
            background: #555;
        }
        .search-bar {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 15px;
            background-color: #ffffff; /* Light background for contrast */
            border-radius: 50px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            margin: 0 auto; /* Centering the search bar horizontally */
            width: 600px; /* Set a max width for better control */
        }
        
        .search-bar input {
            flex: 1; /* Allow the input to grow and fill the available space */
            padding: 12px 20px;
            border-radius: 30px; /* Rounded input corners */
            border: 1px solid #ccc;
            background-color: #f7f7f7; /* Slightly darker background for input */
            color: #333;
            font-size: 16px;
            outline: none;
            transition: border-color 0.3s ease; /* Smooth border color transition */
        }
        
        .search-bar input:focus {
            border-color: #aaaaab; /* Change border color on focus */
            background-color: #ffffff; /* White background on focus for better visibility */
        }
        
        .search-bar button {
            background-color: #9da8b5; /* Blue background for the button */
            border: none;
            color: #fff;
            padding: 12px;
            margin-left: 10px;
            border-radius: 30px; /* Rounded button corners */
            cursor: pointer;
            transition: background-color 0.3s ease; /* Smooth background color transition */
        }
        
        .search-bar button:hover {
            background-color: #757575; /* Darker blue on hover */
        }
       .imageicon{
       height: 40px;
       width: 10px;
       }
        .push:hover{
            background-color: rgb(90, 90, 91);
        }



        /*container2 css code*/

.container2 {
  backdrop-filter: blur(16px) saturate(180%);
  -webkit-backdrop-filter: blur(16px) saturate(180%);
  background-color: rgba(17, 25, 40, 0.25);
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.125);  
  padding: 28px;  
  filter: drop-shadow(0 30px 10px rgba(0,0,0,0.125));
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:center;
  text-align: center;
  width: fit-content;
  height: fit-content;
  
}

.wrapper {
  width: 100%;
  height: 100%;
  
}

.banner-image img{
  
  background-position: center;
  background-size: cover;
  height: 300px;
  width: 100%;
  border-radius: 12px;
  border: 1px solid rgba(255,255,255, 0.255)
}

.CarName{
  
  color: rgba(255,255,255,0.98);
  text-transform: uppercase;
  font-size: 2.4rem;
}

.CarDetails{
  color: #fff;
  
  text-align: center;
  font-size: 0.8rem;
  line-height: 150%;
  letter-spacing: 2px;
  text-transform: uppercase;
}

.button-wrapper{
  margin-top: 18px;
}

.btn {
  border: none;
  padding: 12px 24px;
  border-radius: 24px;
  font-size: 12px;
  font-size: 0.8rem;  
  letter-spacing: 2px;  
  cursor: pointer;
}

.btn + .btn {
  margin-left: 10px;
}

.outline {
  background: transparent;
  color: rgba(0, 212, 255, 0.9);
  border: 1px solid rgba(0, 212, 255, 0.6);
  transition: all .3s ease;
  
}

.outline:hover{
  transform: scale(1.125);
  color: rgba(255, 255, 255, 0.9);
  border-color: rgba(255, 255, 255, 0.9);
  transition: all .3s ease;  
}

.fill {
  background: rgba(0, 212, 255, 0.9);
  color: rgba(255,255,255,0.95);
  filter: drop-shadow(0);
  font-weight: bold;
  transition: all .3s ease; 
}

.fill:hover{
  transform: scale(1.125);  
  border-color: rgba(255, 255, 255, 0.9);
  filter: drop-shadow(0 10px 5px rgba(0,0,0,0.125));
  transition: all .3s ease;    
}
.big{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: fit-content;
  flex-wrap: wrap;
  
}

    </style>
  
   
</head>
<body>
    <div class="container" >
        <div class="configurator">
            <div class="header">
               
                    <img src="~/images/icons/BMW.png" alt="Mercedes Benz Logo">
               
                <nav>
               
    <div class="search-bar">
                        <input type="text" value="@Model.Brand.BrandName"/>
                        <button>
                            <img src="~/images/search-removebg-preview.png" style="width: 20px; height: 20px;" alt="">
                        </button>
                    </div>
                
            </div>
          
</nav>
            
            <div class="content"  >
                <div class="sidebar">
                    
                         @if(!User.IsInRole("Client") && User.Identity.IsAuthenticated){
      <a href="@Url.Action("History", "Car", new { carId = Model.CarId })" >
        <button><i class="fas fa-car"></i></button>
      </a>
    }  
                    
                    
                </div>
                <div class="main" style="display: flex;flex-direction: row;align-items: center;justify-content: center;height:fit-content;padding:1rem">
                    
                   
                    <div style="display: flex; flex-direction: row; justify-content: space-evenly; gap: 1rem; width: 90%;">
                        @if(User.IsInRole("Employee") && User.Identity.IsAuthenticated){
                            @await Html.PartialAsync("_CarServiceOptions", Model)
                          }
                        <div class="car-section" style="height:60%;margin:1rem"  >
                            <div class="car">
                                <img src="@Url.Content("~/images/image" + @Model.CarId+"-removebg-preview.png")"  alt="Car Image">
                                
                            </div>
                        </div>
                        <!-- #start info -->
                        @if(!User.IsInRole("Employee") && User.Identity.IsAuthenticated){
                            @await Html.PartialAsync("_CarDetails", Model)
                          }
 
            





                    </div>
                </div>
            </div>
            <div class="footer">
                <div class="price">$@Model.Price</div>
        
              
            </div>
        </div>
        
    </div>
    
</body>

</html>
